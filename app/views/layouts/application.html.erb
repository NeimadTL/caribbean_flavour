<!DOCTYPE html>
<html>
  <head>
    <title>CaribbeanFlavour</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body style="background: #f88e55;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
      <!-- style="background-color: #87ceeb;"> -->
      <!-- #34d6eb -->
      <a class="navbar-brand font-weight-bolder font-italic" href="<%= root_path %>">CF</a>

      <div class="d-flex flex-row bd-highlight d-none d-md-block d-xl-none">
        <% if user_signed_in? %>
          <div class="p-2 bd-highlight">
            <% if current_user.role.code == Role::CONSUMER_ROLE_CODE %>
              <%= link_to consumer_cart_path(current_user.cart), class: 'btn transparent-btn' do %>
                <span class="badge badge-warning nav-link text-dark border-0" style="box-shadow: 0 0 1px 0 rgba(42, 42, 42, 0.4), 0 3px 4px 0 rgba(42, 42, 42, 0.2);">
                  <%= image_tag("cart-outline.svg", size: "24") %>
                </span>
              <% end %>
            <% elsif current_user.role.code == Role::PARTNER_ROLE_CODE %>
              <%= link_to partner_shops_path, class: 'btn transparent-btn' do %>
                <span class="badge badge-warning nav-link text-dark border-0" style="box-shadow: 0 0 1px 0 rgba(42, 42, 42, 0.4), 0 3px 4px 0 rgba(42, 42, 42, 0.2);">
                  <%= image_tag("home-outline.svg", size: "24") %>
                </span>
              <% end %>
            <% end %>
          </div>
          <div class="dropdown p-2 bd-highlight">
            <button class="btn transparent-btn" type="button" id="dropdownMenuButton"
              data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
               <span class="badge badge-warning nav-link text-dark border-0" style="box-shadow: 0 0 1px 0 rgba(42, 42, 42, 0.4), 0 3px 4px 0 rgba(42, 42, 42, 0.2);">
                 <%= image_tag("person-outline.svg", size: "24") %>
               </span>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= link_to t('.edit_account_link'), edit_user_registration_path, class: 'dropdown-item' %>
            </div>
          </div>
        <% end %>
      </div>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="<%= root_path %>"><%= t('.home_link') %></a>
          </li>
          <% if user_signed_in? %>
            <% if current_user.role.code == Role::CONSUMER_ROLE_CODE %>
              <li class="nav-item">
                <%= link_to t('.all_shops_link'), consumer_shops_path(sort:0), class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to t('.my_orders_link'), consumer_orders_path, class: 'nav-link' %>
              </li>
            <% elsif current_user.role.code == Role::PARTNER_ROLE_CODE %>
              <% unless current_user.shop.nil? %>
                <li class="nav-item">
                  <%= link_to t('.my_orders_link'), partner_orders_path, class: 'nav-link' %>
                </li>
              <% end %>
              <li class="nav-item">
                <%= link_to t('.my_shop_link'), partner_shops_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to t('.billing_link'), partner_billing_index_path, class: 'nav-link' %>
              </li>
            <% elsif current_user.role.code == Role::ADMIN_ROLE_CODE %>
              <li class="nav-item">
                <%= link_to t('.products_link'), admin_products_path, class: 'nav-link' %>
              </li>
            <% end %>
          <% end %>

          <!-- <li class="nav-item">
            <a class="nav-link" href="#"><#%= t('.features_link') %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"><#%= t('.pricing_link') %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
          </li> -->
        </ul>
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <% if current_user.role.code == Role::CONSUMER_ROLE_CODE %>
              <li class="nav-item d-none d-xl-block d-xl-none">
                <%= link_to consumer_cart_path(current_user.cart), class: 'btn transparent-btn' do %>
                  <span class="badge badge-warning nav-link text-dark border-0" style="box-shadow: 0 0 1px 0 rgba(42, 42, 42, 0.4), 0 3px 4px 0 rgba(42, 42, 42, 0.2);">
                    <%= image_tag("cart-outline.svg", size: "24") %>
                  </span>
                <% end %>
              </li>
            <% elsif current_user.role.code == Role::PARTNER_ROLE_CODE %>
              <li class="nav-item d-none d-xl-block d-xl-none">
                <%= link_to partner_shops_path, class: 'btn transparent-btn' do %>
                  <span class="badge badge-warning nav-link text-dark border-0" style="box-shadow: 0 0 1px 0 rgba(42, 42, 42, 0.4), 0 3px 4px 0 rgba(42, 42, 42, 0.2);">
                    <%= image_tag("home-outline.svg", size: "24") %>
                  </span>
                <% end %>
              </li>
            <% end %>
            <li class="nav-item d-none d-xl-block d-xl-none">
              <div class="dropdown">
                <button class="btn transparent-btn" type="button" id="dropdownMenuButton"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <span class="badge badge-warning nav-link text-dark border-0" style="box-shadow: 0 0 1px 0 rgba(42, 42, 42, 0.4), 0 3px 4px 0 rgba(42, 42, 42, 0.2);">
                    Hey @<%= current_user.username %>
                  </span>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                  <%= link_to t('.edit_account_link'), edit_user_registration_path, class: 'dropdown-item' %>
                </div>
              </div>
            </li>
            <li class="nav-item">
              <%= link_to t('.sign_out_link'), destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to t('.sign_in_link'), new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to t('.sign_up_link'), new_user_registration_path, class: 'nav-link' %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= form_tag "#", method: :get, class: 'locale' do %>
              <%= select_tag 'locale', options_for_select(LANGUAGES, I18n.locale.to_s),
              onchange: 'this.form.submit()', class: 'mt-2' %>
              <%= submit_tag 'submit', {style: 'display: none;'} %>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container container-fluid">
      <!-- Content here -->
      <% if notice.present? %>
        <br><div class="p-3 mb-2 bg-success text-white rounded"><%= notice %></div>
      <% end %>

      <% if alert.present? %>
        <br><div class="p-3 mb-2 bg-danger text-white rounded"><%= alert %></div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
