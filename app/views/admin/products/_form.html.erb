
<%= simple_form_for @product, url: @product.persisted? ? admin_product_path : admin_products_path do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :reference,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "reference" }%>
    <%= f.input :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" }%>
    <%= f.label :sproduct_category_id, 'Category' %>
    <%= f.select :product_category_id, ProductCategory.all.collect {|c| [ c.name, c.id ] },
              { :prompt => "Please select a category" },
              { class: 'form-control'} %>
  </div>

  <br>
  <div class="form-actions">
    <%= f.button :submit, "Create Product", class: 'btn btn-primary' %>
  </div>
<% end %>
