<p>
<%= @stock.shop.name %> | <%= @stock.product.name %> | <%= number_to_currency(number_to_human(@stock.price)) %>
</p>


<%= simple_form_for(@line_item, url: consumer_shop_stock_line_items_path(@shop, @stock)) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


  <div class="form-inputs">
    <%= f.input :quantity, required: true, autofocus: true, input_html: { autocomplete: "quantity" }%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
