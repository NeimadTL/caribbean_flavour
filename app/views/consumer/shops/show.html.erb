<p id="notice"><%= notice %></p>

<br><h1><%= t('.welcome') %>  <%= @shop.name %></h1><br>

<h5><%= t('.delivery_options') %></h5>
<div class="" style="margin-bottom:16px;">
  <% @shop.delivery_options.each do |delivery_option| %>
    <span class="badge badge-info"><%= delivery_option.option %></span>
  <% end %>
</div>

<h5>Products</h5>
<table class="table">
    <thead>
      <tr>
        <th scope="col"><%= t('.name_col') %></th>
        <th scope="col"><%= t('.price_col') %></th>
        <th scope="col"><%= t('.actions_col') %></th>
      </tr>
    </thead>
    <tbody>
      <% @shop.stocks.each do |stock| %>
        <tr>
          <td><%= stock.product.name %></td>
          <td><%= number_to_currency(stock.price) %></td>
          <td>
            <% if user_signed_in? %>
              <% if current_user.role.code == Role::CONSUMER_ROLE_CODE %>
                <%= link_to new_consumer_cart_stock_line_item_path(current_user.cart, stock), class: 'btn transparent pt-0 pb-0' do %>
                  <%= image_tag "cart-outline.svg", size: "24" %>
                <% end %>
              <% end %>
            <% else %>
            <%= link_to "javascript:void(0);", class: 'btn transparent pt-0 pb-0', tabindex: "0", title: "Sign up",
                data: { toggle: "popover", content: "You must be connected to buy products.", container: "body", placement: "bottom" } do %>
              <%= image_tag "cart-outline.svg", size: "24" %>
            <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>


<%= link_to consumer_shops_path, class: 'btn transparent float-right' do %>
  <%= t('.exit_btn') %> <%= image_tag "exit-outline.svg", size: "24" %>
<% end %>
