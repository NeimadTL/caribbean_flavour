<p id="notice"><%= notice %></p>



<h5><%= @order.shop.name %></h5>
<table class="table">
    <thead>
      <tr>
        <th scope="col"><%= t('.name_col') %></th>
        <th scope="col"><%= t('.unit_price_col') %></th>
        <th scope="col"><%= t('.qty_col') %></th>
        <th scope="col"><%= t('.price_col') %></th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_line_items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= number_to_currency(item.unit_price) %></td>
          <td><%= item.quantity %></td>
          <td><%= number_to_currency(item.total_price) %></td>
        </tr>
      <% end %>
      <tr>
        <td colspan="3">Total</td>
        <td class="total_cell"><%= number_to_currency(@order.total_price) %></td>
      </tr>
    </tbody>
</table>


<p>
  <strong><%= t('.delivery_option') %></strong> <%= @order.delivery_option %><br>
  <strong><%= t('.order_status') %></strong> <%= @order.status %>
</p>

<%= link_to t('.cancel'), consumer_order_path(@order), method: :delete,
    data: { confirm: t('.are_you_sure') }, class: "btn btn-danger btn-sm float-right" %>


