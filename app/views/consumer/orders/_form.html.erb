
<% @cart.line_items_of(@shop).each do |item| %>
  <td><%= item.stock.product.name %></td>
<% end %>

<%= simple_form_for(@order, url: consumer_orders_path) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :delivery_option_code, as: :radio_buttons,
        collection: @shop.delivery_options, label_method: :option,
        value_method: :code %>
    <%= hidden_field_tag :shop_id, @shop.id %>
  </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
