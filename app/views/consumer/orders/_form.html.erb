

<h5> <%= @shop.name %></h5>
<table class="table">
    <thead>
      <tr>
        <th scope="col"><%= t('.name_col') %></th>
        <th scope="col"><%= t('.unit_price_col') %></th>
        <th scope="col"><%= t('.qty_col') %></th>
        <th scope="col"><%= t('.price_col') %></th>
        <th scope="col"><%= t('.actions_col') %></th>
      </tr>
    </thead>
    <tbody>
      <% @cart.line_items_of(@shop).each do |item| %>
        <tr>
          <td><%= item.stock.product.name %></td>
          <td><%= number_to_currency(item.price, locale: I18n.locale) %></td>
          <td><%= item.quantity %></td>
          <td><%= number_to_currency(item.total_price, locale: I18n.locale) %></td>
          <td>
            <div class="dropdown">
              <button class="btn transparent-btn" type="button" id="dropdownMenu2"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= image_tag("ellipsis-horizontal-outline.svg", size: "24") %>
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                <%= link_to t('.update_link'), edit_consumer_cart_stock_line_item_path(current_user.cart, item.stock, item), class: 'dropdown-item' %>
                <%= link_to t('.delete_link'), consumer_cart_stock_line_item_path(current_user.cart, item.stock, item), method: :delete,
                    data: { confirm: t('.are_you_sure') }, class: 'dropdown-item' %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
      <tr>
        <td colspan="4">Total</td>
        <td class="total_cell"><%= number_to_currency(@cart.total_price_for(@cart.line_items_of(@shop)), locale: I18n.locale) %></td>
      </tr>
    </tbody>
</table>

<% if @ocd_fee_msg %>
  <div class="card">
    <div class="card-body text-info">
      <%= @ocd_fee_msg %>
    </div>
  </div>
<% end %>

<% if @home_delivery_mininum_amount_msg %>
  <div class="card">
    <div class="card-body text-info">
      <%= @home_delivery_mininum_amount_msg %>
    </div>
  </div>
<% end %>
<br>


<%= simple_form_for(@order, url: consumer_cart_shop_orders_path(current_user.cart, @shop)) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :delivery_option_code, as: :radio_buttons, label: t('.delivery_option'),
        collection: @shop.delivery_options, label_method: :to_option,
        value_method: :code %>
  </div>


  <div class="form-actions">
    <%= f.button :submit, t('.place_order_btn'), class: "btn btn-primary" %>
  </div>
<% end %>
