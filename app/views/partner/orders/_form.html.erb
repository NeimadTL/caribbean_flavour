
<%= simple_form_for(@order, url: partner_order_path(@order)) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <% if @order.delivery_option_code == DeliveryOption::CUSTOMER_PLACE_OPTION_CODE ||
          @order.delivery_option_code == DeliveryOption::PARCEL_PICKUP_POINT_OPTION_CODE %>
      <% if @order.with_outside_shop_coverage_fee? %>
        <%= f.input :outside_shop_coverage_fee %>
      <% end %>
    <% end %>
    <%= f.label t('.orders_form_status') %>
    <%= f.select :status_id, Order::STATUS.map { |k,v| [t(v),k] }, { prompt: t('.status_prompt') }, class: 'form-control' %>
  </div><br>

  <div class="form-actions">
    <%= f.button :submit, t('.orders_form_submit'), class: 'btn btn-primary' %>
  </div>
<% end %>
