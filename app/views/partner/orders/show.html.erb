<div class="card mt-3 mb-3">
  <div class="card-header">
    <h5 class="card-title"><%= t('.order_number') %>#<%= @order.id %></h5>
    <div class="row">
      <div class="col"><%= image_tag "person-circle-outline.svg", size: "24" %> <%= @order.user.firstname %> <%= @order.user.lastname %></div>
      <div class="col"><%= image_tag "bicycle-outline.svg", size: "24" %> <%= @order.delivery_option.to_option %></div>
      <div class="col"><strong><%= t('.status') %></strong> <%= t(Order::STATUS[@order.status_id]) %></div>
    </div>
  </div>
  <ul class="list-group">
    <% @order.order_line_items.each do |item| %>
      <li class="list-group-item border">
        <div class="float-left">
          <%= image_tag Product::ICONS[item.product_reference], class: 'img-fluid', size: '64' %>
        </div>
        <div class="float-right">
          <div class="row">
            <div class="col"><h5 class="card-title"><%= item.name %></h5></div>
            <div class="col"><h5 class="text-nowrap"><%= number_to_currency(item.total_price, locale: I18n.locale) %></h5></div>
          </div>
          <div class="row">
            <div class="col"><span class="badge badge-primary badge-pill"><%= item.quantity %> Kgs</span></div>
            <!-- <td><%= number_to_currency(item.total_price, locale: I18n.locale) %></td> -->
            <div class="col"></div>
          </div>
        </div>
      </li>
    <% end %>
    <% if @order.standard_delivery_fees > 0 && (@order.delivery_option_code == DeliveryOption::CUSTOMER_PLACE_OPTION_CODE || @order.delivery_option_code == DeliveryOption::PARCEL_PICKUP_POINT_OPTION_CODE) %>
      <li class="list-group-item">
        <div class="float-right">
          <div class="row">
            <div class="col"><h5 class="card-title text-nowrap"><%= t('.standard_delivery_fees_label') %></h5></div>
            <div class="col"><h5 class="text-nowrap"><%= number_to_currency(@order.standard_delivery_fees, locale: I18n.locale) %></h5></div>
          </div>
        </div>
      </li>
    <% end %>
    <li class="list-group-item">
      <div class="float-right">
        <div class="row">
        <div class="col"><h5 class="card-title">Total</h5></div>
        <div class="col"><h5 class="text-nowrap"><%= number_to_currency(@order.total_price, locale: I18n.locale) %></h5></div>
      </div>
      </div>
    </li>
  </ul>
</div>


<%= link_to t('.edit_status_link'), edit_partner_order_path(@order), class: "btn btn-primary btn-sm float-right" %>

<%= link_to t('.back_link'), partner_orders_path %>
